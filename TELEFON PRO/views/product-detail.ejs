<div class="container my-5">
    <div class="row">
        <!-- Ürün Resmi -->
        <div class="col-lg-6">
            <div class="product-image-gallery">
                <% if (product.image_url) { %>
                    <img src="<%= product.image_url %>" class="img-fluid rounded shadow-sm main-product-image" alt="<%= product.name %>">
                <% } else { %>
                    <div class="placeholder-image-large d-flex align-items-center justify-content-center rounded shadow-sm">
                        <i class="fas fa-image text-muted" style="font-size: 5rem;"></i>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Ürün Bilgileri -->
        <div class="col-lg-6">
            <div class="product-info">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Ana Sayfa</a></li>
                        <% if (product.category_name) { %>
                            <li class="breadcrumb-item">
                                <a href="/kategori/<%= product.category_id %>" class="text-decoration-none"><%= product.category_name %></a>
                            </li>
                        <% } %>
                        <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
                    </ol>
                </nav>
                
                <h1 class="product-title mb-3"><%= product.name %></h1>
                
                <% if (product.category_name) { %>
                    <span class="badge bg-primary mb-3"><%= product.category_name %></span>
                <% } %>
                
                <% if (product.description) { %>
                    <div class="product-description mb-4">
                        <h5>Ürün Açıklaması</h5>
                        <p class="text-muted"><%= product.description %></p>
                    </div>
                <% } %>
                
                <!-- Fiyat -->
                <% if (product.price) { %>
                    <div class="price-section mb-4">
                        <h3 class="text-primary mb-0">₺<%= parseFloat(product.price).toLocaleString('tr-TR', {minimumFractionDigits: 2}) %></h3>
                        <small class="text-muted">KDV Dahil</small>
                    </div>
                <% } %>
                
                <!-- Renk Seçenekleri -->
                <% if (product.colors) { %>
                    <div class="color-section mb-4">
                        <h6 class="mb-2">Renk Seçenekleri</h6>
                        <div class="color-options">
                            <% const colors = product.colors.split(','); %>
                            <% colors.forEach(color => { %>
                                <span class="badge bg-secondary me-2 mb-2"><%= color.trim() %></span>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
                
                <!-- Stok Durumu -->
                <div class="stock-section mb-4">
                    <% if (product.stock > 0) { %>
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i>
                            Stokta Var (<%= product.stock %> adet)
                        </span>
                    <% } else { %>
                        <span class="badge bg-danger">
                            <i class="fas fa-times-circle me-1"></i>
                            Stokta Yok
                        </span>
                    <% } %>
                </div>
                
                <!-- İletişim Bilgileri -->
                <div class="contact-section">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>
                            Bilgi ve Sipariş İçin İletişim
                        </h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="mb-2">
                                    <i class="fas fa-phone text-primary me-2"></i>
                                    <strong>Telefon:</strong><br>
                                    <a href="tel:+905XXXXXXXX" class="text-decoration-none">0532 XXX XX XX</a>
                                </p>
                            </div>
                            <div class="col-sm-6">
                                <p class="mb-2">
                                    <i class="fab fa-whatsapp text-success me-2"></i>
                                    <strong>WhatsApp:</strong><br>
                                    <a href="https://wa.me/905XXXXXXXX" class="text-decoration-none" target="_blank">WhatsApp ile İletişim</a>
                                </p>
                            </div>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="tel:+905XXXXXXXX" class="btn btn-primary">
                                <i class="fas fa-phone me-2"></i>Hemen Ara
                            </a>
                            <a href="https://wa.me/905XXXXXXXX" class="btn btn-success" target="_blank">
                                <i class="fab fa-whatsapp me-2"></i>WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Ürün Özellikleri -->
    <% if (product.specifications) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-list-ul me-2"></i>Teknik Özellikler</h5>
                    </div>
                    <div class="card-body">
                        <div class="specifications">
                            <%= product.specifications %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    
    <!-- Benzer Ürünler -->
    <% if (similarProducts && similarProducts.length > 0) { %>
        <div class="row mt-5">
            <div class="col-12">
                <h4 class="mb-4">Benzer Ürünler</h4>
                <div class="row g-4">
                    <% similarProducts.forEach(similarProduct => { %>
                        <div class="col-lg-3 col-md-6">
                            <div class="card h-100 product-card">
                                <div class="product-image-container">
                                    <% if (similarProduct.image_url) { %>
                                        <img src="<%= similarProduct.image_url %>" class="card-img-top product-image" alt="<%= similarProduct.name %>">
                                    <% } else { %>
                                        <div class="placeholder-image d-flex align-items-center justify-content-center">
                                            <i class="fas fa-image text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    <% } %>
                                    
                                    <div class="product-overlay">
                                        <a href="/urun/<%= similarProduct.id %>" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye me-2"></i>Detayları Gör
                                        </a>
                                    </div>
                                </div>
                                
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2"><%= similarProduct.name %></h6>
                                    <p class="card-text text-muted small flex-grow-1">
                                        <%= similarProduct.description ? (similarProduct.description.length > 60 ? similarProduct.description.substring(0, 60) + '...' : similarProduct.description) : '' %>
                                    </p>
                                    
                                    <div class="mt-auto">
                                        <% if (similarProduct.price) { %>
                                            <div class="price-tag">
                                                <span class="h6 text-primary mb-0">₺<%= parseFloat(similarProduct.price).toLocaleString('tr-TR', {minimumFractionDigits: 2}) %></span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    <% } %>
</div>