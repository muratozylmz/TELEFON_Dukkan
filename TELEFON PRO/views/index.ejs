<!-- Hero Section -->
<section class="hero-section bg-gradient-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">GaziTech Mobile'a Hoş Geldiniz</h1>
                <p class="lead mb-4">
                    En kaliteli mobil teknoloji ürünleri için doğru adrestesiniz. 
                    Geniş ürün yelpazemiz ve uygun fiyatlarımızla sizlere hizmet veriyoruz.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <div class="feature-item">
                        <i class="fas fa-shipping-fast text-warning me-2"></i>
                        <span>Hızlı Teslimat</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-shield-alt text-warning me-2"></i>
                        <span>Güvenli Alışveriş</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-star text-warning me-2"></i>
                        <span>Kaliteli Ürünler</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-graphic">
                    <div class="hero-icon-stack">
                        <div class="hero-icon hero-icon-1">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="hero-icon hero-icon-2">
                            <i class="fas fa-laptop"></i>
                        </div>
                        <div class="hero-icon hero-icon-3">
                            <i class="fas fa-headphones"></i>
                        </div>
                        <div class="hero-icon hero-icon-4">
                            <i class="fas fa-gamepad"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hizmetlerimiz / Kategoriler -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="mb-3">Hizmetlerimiz</h2>
            <p class="text-muted">Teknoloji dünyasındaki her ihtiyacınız için profesyonel çözümler</p>
        </div>
        
        <div class="row g-3">
            <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                <% 
                // Kategori ikonları mapping - Profesyonel ikonlar
                const categoryIcons = {
                    'Telefon': { icon: 'fas fa-mobile-screen', color: 'primary', gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' },
                    'iPhone': { icon: 'fab fa-apple', color: 'dark', gradient: 'linear-gradient(135deg, #1a1a1a 0%, #4a4a4a 100%)' },
                    'Smartphone': { icon: 'fas fa-mobile-screen-button', color: 'info', gradient: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' },
                    'Tablet': { icon: 'fas fa-tablet-screen-button', color: 'success', gradient: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)' },
                    'Kulaklık': { icon: 'fas fa-headphones-simple', color: 'warning', gradient: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)' },
                    'Powerbank': { icon: 'fas fa-battery-half', color: 'danger', gradient: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)' },
                    'Şarj Kablosu': { icon: 'fas fa-cable-car', color: 'secondary', gradient: 'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)' },
                    'Wireless Charger': { icon: 'fas fa-charging-station', color: 'primary', gradient: 'linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)' },
                    'Bilgisayar': { icon: 'fas fa-computer', color: 'info', gradient: 'linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%)' },
                    'Bilgisayar Aksesuarları': { icon: 'fas fa-desktop', color: 'dark', gradient: 'linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)' },
                    'Akıllı Saat': { icon: 'fas fa-watch', color: 'success', gradient: 'linear-gradient(135deg, #fad0c4 0%, #ffd1ff 100%)' },
                    'Kamera': { icon: 'fas fa-camera-retro', color: 'warning', gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' },
                    'Telefon Kılıfı': { icon: 'fas fa-mobile-screen', color: 'primary', gradient: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' },
                    'Ekran Koruyucu': { icon: 'fas fa-shield-halved', color: 'success', gradient: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)' },
                    'Araba Aksesuarları': { icon: 'fas fa-car-side', color: 'danger', gradient: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)' },
                    'Gaming': { icon: 'fas fa-gamepad', color: 'dark', gradient: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)' },
                    'Depolama': { icon: 'fas fa-hard-drive', color: 'secondary', gradient: 'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)' },
                    'Ev Elektroniği': { icon: 'fas fa-house-laptop', color: 'info', gradient: 'linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)' }
                };
                
                // Ana kategoriler (6 tane göster)
                const mainCategories = categories.slice(0, 6);
                %>
                
                <% mainCategories.forEach((category, index) => { 
                    const categoryKey = Object.keys(categoryIcons).find(key => 
                        category.name.toLowerCase().includes(key.toLowerCase()) || 
                        key.toLowerCase().includes(category.name.toLowerCase())
                    );
                    const iconData = categoryIcons[categoryKey] || { 
                        icon: 'fas fa-mobile-alt', 
                        color: 'primary', 
                        gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' 
                    };
                %>
                    <div class="col-lg-4 col-md-6">
                        <a href="/kategori/<%= category.id %>" class="text-decoration-none">
                            <div class="service-card">
                                                               <div class="service-icon-wrapper">
                                   <% if (category.image_url) { %>
                                       <div class="service-image">
                                           <img src="<%= category.image_url %>" 
                                                alt="<%= category.name %>" 
                                                class="category-image">
                                       </div>
                                   <% } else { %>
                                       <div class="service-icon" style="background: <%= iconData.gradient %>;">
                                           <i class="<%= iconData.icon %>"></i>
                                       </div>
                                   <% } %>
                                   </div>
                                <div class="service-content">
                                    <h4><%= category.name %></h4>
                                    <p class="text-muted">
                                        <% if (category.name.toLowerCase().includes('telefon') || category.name.toLowerCase().includes('iphone')) { %>
                                            Profesyonel telefon tamir ve bakım hizmetleri
                                        <% } else if (category.name.toLowerCase().includes('tablet')) { %>
                                            Tablet tamir ve teknik destek hizmetleri  
                                        <% } else if (category.name.toLowerCase().includes('bilgisayar') || category.name.toLowerCase().includes('laptop')) { %>
                                            Bilgisayar tamir ve upgrade hizmetleri
                                        <% } else if (category.name.toLowerCase().includes('kulaklık')) { %>
                                            Ses sistemleri ve kulaklık çözümleri
                                        <% } else if (category.name.toLowerCase().includes('gaming') || category.name.toLowerCase().includes('oyun')) { %>
                                            Gaming ekipmanları ve konsol hizmetleri
                                        <% } else { %>
                                            Kaliteli <%= category.name.toLowerCase() %> ürünleri ve hizmetleri
                                        <% } %>
                                    </p>
                                    <div class="service-arrow">
                                        <i class="fas fa-arrow-right"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            <% } %>
        </div>
        
        <!-- Tüm Kategoriler Butonu -->
        <div class="text-center mt-5">
            <a href="/kategoriler" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-th-large me-2"></i>Tüm Kategorileri Görüntüle
            </a>
        </div>
    </div>
</section>

<!-- Öne Çıkan Ürünler -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="mb-3">Öne Çıkan Ürünler</h2>
                <p class="text-muted">En popüler ve kaliteli ürünlerimizi keşfedin</p>
            </div>
        </div>
        
        <div class="row g-4">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 product-card">
                            <div class="product-image-container">
                                <% if (product.image_url) { %>
                                    <img src="<%= product.image_url %>" class="card-img-top product-image" alt="<%= product.name %>">
                                <% } else { %>
                                    <div class="placeholder-image d-flex align-items-center justify-content-center">
                                        <i class="fas fa-image text-muted" style="font-size: 3rem;"></i>
                                    </div>
                                <% } %>
                                
                                <div class="product-overlay">
                                    <a href="/urun/<%= product.id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye me-2"></i>Detayları Gör
                                    </a>
                                </div>
                            </div>
                            
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title mb-2"><%= product.name %></h6>
                                <p class="card-text text-muted small flex-grow-1">
                                    <%= product.description ? (product.description.length > 80 ? product.description.substring(0, 80) + '...' : product.description) : '' %>
                                </p>
                                
                                <div class="mt-auto">
                                    <% if (product.category_name) { %>
                                        <span class="badge bg-secondary mb-2"><%= product.category_name %></span>
                                    <% } %>
                                    
                                    <% if (product.price) { %>
                                        <div class="price-tag">
                                            <span class="h5 text-primary mb-0">₺<%= parseFloat(product.price).toLocaleString('tr-TR', {minimumFractionDigits: 2}) %></span>
                                        </div>
                                    <% } %>
                                    
                                    <% if (product.colors) { %>
                                        <div class="color-options mt-2">
                                            <small class="text-muted">Renk seçenekleri: <%= product.colors %></small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="py-5">
                        <i class="fas fa-box-open text-muted mb-3" style="font-size: 4rem;"></i>
                        <h4 class="text-muted">Henüz ürün eklenmemiş</h4>
                        <p class="text-muted">Yakında yeni ürünler eklenecek!</p>
                    </div>
                </div>
            <% } %>
        </div>
        
        <% if (products && products.length > 0) { %>
            <div class="text-center mt-5">
                <a href="/kategori/1" class="btn btn-outline-primary btn-lg">Tüm Ürünleri Görüntüle</a>
            </div>
        <% } %>
    </div>
</section>

