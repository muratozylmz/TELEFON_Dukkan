<!-- Kategoriler Sayfası -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="mb-3">Tüm Kategoriler</h1>
            <p class="text-muted">GaziTech Mobile'da bulunan tüm kategori ve hizmetlerimizi keşfedin</p>
        </div>
        
        <div class="row g-3">
            <% if (categories && categories.length > 0) { %>
                <% 
                // Kategori ikonları mapping - Profesyonel ikonlar
                const categoryIcons = {
                    'Telefon': { icon: 'fas fa-mobile-screen', gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' },
                    'iPhone': { icon: 'fab fa-apple', gradient: 'linear-gradient(135deg, #1a1a1a 0%, #4a4a4a 100%)' },
                    'Smartphone': { icon: 'fas fa-mobile-screen-button', gradient: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' },
                    'Tablet': { icon: 'fas fa-tablet-screen-button', gradient: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)' },
                    'Kulaklık': { icon: 'fas fa-headphones-simple', gradient: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)' },
                    'Powerbank': { icon: 'fas fa-battery-half', gradient: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)' },
                    'Şarj Kablosu': { icon: 'fas fa-cable-car', gradient: 'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)' },
                    'Wireless Charger': { icon: 'fas fa-charging-station', gradient: 'linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)' },
                    'Bilgisayar': { icon: 'fas fa-computer', gradient: 'linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%)' },
                    'Bilgisayar Aksesuarları': { icon: 'fas fa-desktop', gradient: 'linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)' },
                    'Akıllı Saat': { icon: 'fas fa-watch', gradient: 'linear-gradient(135deg, #fad0c4 0%, #ffd1ff 100%)' },
                    'Kamera': { icon: 'fas fa-camera-retro', gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' },
                    'Telefon Kılıfı': { icon: 'fas fa-mobile-screen', gradient: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' },
                    'Ekran Koruyucu': { icon: 'fas fa-shield-halved', gradient: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)' },
                    'Araba Aksesuarları': { icon: 'fas fa-car-side', gradient: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)' },
                    'Gaming': { icon: 'fas fa-gamepad', gradient: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)' },
                    'Depolama': { icon: 'fas fa-hard-drive', gradient: 'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)' },
                    'Ev Elektroniği': { icon: 'fas fa-house-laptop', gradient: 'linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)' }
                };
                %>
                
                <% categories.forEach((category, index) => { 
                    const categoryKey = Object.keys(categoryIcons).find(key => 
                        category.name.toLowerCase().includes(key.toLowerCase()) || 
                        key.toLowerCase().includes(category.name.toLowerCase())
                    );
                    const iconData = categoryIcons[categoryKey] || { 
                        icon: 'fas fa-mobile-alt', 
                        gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' 
                    };
                %>
                                               <div class="col-lg-3 col-md-4 col-sm-6">
                               <a href="/kategori/<%= category.id %>" class="text-decoration-none">
                                   <div class="service-card">
                                       <div class="service-icon-wrapper">
                                           <% if (category.image_url) { %>
                                               <div class="service-image">
                                                   <img src="<%= category.image_url %>" 
                                                        alt="<%= category.name %>" 
                                                        class="category-image">
                                               </div>
                                           <% } else { %>
                                               <div class="service-icon" style="background: <%= iconData.gradient %>;">
                                                   <i class="<%= iconData.icon %>"></i>
                                               </div>
                                           <% } %>
                                       </div>
                                <div class="service-content">
                                    <h4><%= category.name %></h4>
                                    <% if (category.description) { %>
                                        <p class="text-muted"><%= category.description %></p>
                                    <% } else { %>
                                        <p class="text-muted">
                                            <% if (category.name.toLowerCase().includes('telefon') || category.name.toLowerCase().includes('iphone')) { %>
                                                Profesyonel telefon tamir ve bakım hizmetleri
                                            <% } else if (category.name.toLowerCase().includes('tablet')) { %>
                                                Tablet tamir ve teknik destek hizmetleri  
                                            <% } else if (category.name.toLowerCase().includes('bilgisayar') || category.name.toLowerCase().includes('laptop')) { %>
                                                Bilgisayar tamir ve upgrade hizmetleri
                                            <% } else if (category.name.toLowerCase().includes('kulaklık')) { %>
                                                Ses sistemleri ve kulaklık çözümleri
                                            <% } else if (category.name.toLowerCase().includes('gaming') || category.name.toLowerCase().includes('oyun')) { %>
                                                Gaming ekipmanları ve konsol hizmetleri
                                            <% } else { %>
                                                Kaliteli <%= category.name.toLowerCase() %> ürünleri ve hizmetleri
                                            <% } %>
                                        </p>
                                    <% } %>
                                    <div class="service-arrow">
                                        <i class="fas fa-arrow-right"></i>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <div class="py-5">
                        <i class="fas fa-th-large text-muted mb-3" style="font-size: 4rem;"></i>
                        <h4 class="text-muted">Henüz kategori eklenmemiş</h4>
                        <p class="text-muted">Yakında yeni kategoriler eklenecek!</p>
                    </div>
                </div>
            <% } %>
        </div>
        
        <!-- Geri Dön Butonu -->
        <div class="text-center mt-5">
            <a href="/" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
            </a>
        </div>
    </div>
</section>
